<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape_nocorner_black"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@color/whitesmoke"
        style="@style/txt_black_16"
        android:text="数据同步"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/txt_gray_14"
            android:text="信息数据"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:background="@color/light_gray"
            android:layout_toLeftOf="@+id/dataAsycn"
            android:layout_centerVertical="true"
            android:layout_width="1px"
            android:layout_height="35dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/dataAsycn"
            style="@style/txt_gray_14"
            android:text="同步"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/txt_gray_14"
            android:text="离线地图"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:background="@color/light_gray"
            android:layout_toLeftOf="@+id/offlineMap"
            android:layout_centerVertical="true"
            android:layout_width="1px"
            android:layout_height="35dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/offlineMap"
            style="@style/txt_gray_14"
            android:text="下载"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/txt_gray_14"
            android:text="法律文档"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:background="@color/light_gray"
            android:layout_toLeftOf="@+id/docDownload"
            android:layout_centerVertical="true"
            android:layout_width="1px"
            android:layout_height="35dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/docDownload"
            style="@style/txt_gray_14"
            android:text="下载"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/app_update_rl_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ProgressBar
            android:id="@+id/app_update_pb_progress"
            android:layout_width="fill_parent"
            android:layout_height="22dip"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/app_update_progress_horizontal"
            android:background="@drawable/app_update_progress_bottom"
            android:maxHeight="8dip"
            android:minHeight="8dip"
            android:padding="5dip"/>
        <TextView
            android:id="@+id/app_update_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:layout_below="@+id/app_update_pb_progress"
            android:layout_alignParentLeft="true"
            android:textColor="@color/normal_gray"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/app_update_tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:layout_below="@+id/app_update_pb_progress"
            android:layout_alignParentRight="true"
            android:textColor="@color/normal_gray"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:id="@+id/okBtn"
        android:layout_marginTop="15dp"
        android:background="@mipmap/of_btn_login_unpressed"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:text="确   定"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
