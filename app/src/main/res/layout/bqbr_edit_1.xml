<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="隐患点名称"
            style="@style/txt_gray_12" />
        <EditText
            android:background="@null"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="隐患点编号"
            style="@style/txt_gray_12" />
        <EditText
            android:background="@null"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="所在地区"
            style="@style/txt_gray_12" />
        <EditText
            android:hint="县区"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <View
            android:background="@color/hard_gray"
            android:layout_width="10dp"
            android:layout_height="1px" />
        <EditText
            android:hint="乡镇"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <View
            android:background="@color/hard_gray"
            android:layout_width="10dp"
            android:layout_height="1px" />
        <EditText
            android:hint="村"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:layout_width="70dp"
            android:layout_height="40dp" />
        <View
            android:background="@color/hard_gray"
            android:layout_width="10dp"
            android:layout_height="1px" />
        <EditText
            android:hint="组"
            android:textColorHint="@color/light_gray"
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:inputType="numberSigned"
            android:layout_width="50dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="45dp">
            <TextView
                android:text="单户户主"
                style="@style/txt_gray_12" />
            <EditText
                android:background="@null"
                style="@style/txt_black_14"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="单户搬迁人数"
                style="@style/txt_gray_12" />
            <EditText
                android:background="@null"
                android:inputType="numberSigned"
                android:gravity="center"
                style="@style/txt_black_14"
                android:layout_marginLeft="10dp"
                android:layout_width="60dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="安置方式"
            style="@style/txt_gray_12" />
        <EditText
            android:background="@null"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="集中或安置分散点名称"
            style="@style/txt_gray_12" />
        <EditText
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="汛期自主安置点名称"
            style="@style/txt_gray_12" />
        <EditText
            android:background="@null"
            android:gravity="center"
            style="@style/txt_black_14"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <RelativeLayout
        android:id="@+id/dateLayout1"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:text="自主安置入住时间"
            style="@style/txt_gray_12" />
        <TextView
            android:id="@+id/dataTxt1"
            android:layout_toLeftOf="@+id/arrowRight"
            android:layout_centerVertical="true"
            android:text=""
            style="@style/txt_black_14" />
        <View
            android:id="@+id/arrowRight"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>
