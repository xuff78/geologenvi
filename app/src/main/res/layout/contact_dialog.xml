<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="center">

    <LinearLayout android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/shape_nocorner_black">
        <TextView
            android:text="名称"
            android:id="@+id/nameTxt"
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            style="@style/txt_black_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray" />
        <RelativeLayout
            android:id="@+id/dialPhone"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
        <ImageView
            android:id="@+id/phoneIcon"
            android:src="@mipmap/of_icon_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/phoneIcon"
            android:id="@+id/phoneTxt"
            android:paddingLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@style/txt_black_16"/>
    </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/dialPhone2"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon2"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon2"
                android:id="@+id/phoneTxt2"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/otherInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="职位"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                style="@style/txt_gray_12"/>
            <TextView
                android:id="@+id/positionTxt"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_12"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/addrLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="所在地"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                style="@style/txt_gray_12"/>
            <TextView
                android:id="@+id/areaTxt"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_12"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
        </RelativeLayout>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_marginTop="15dp"
            android:text="确定"
            style="@style/txt_white_14"
            android:background="@mipmap/of_blue_btn"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </LinearLayout>
</RelativeLayout>
