<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/nameTxt"
            android:layout_centerVertical="true"
            android:text="名称"
            style="@style/txt_gray_14" />
        <EditText
            android:singleLine="true"
            android:layout_toRightOf="@+id/nameTxt"
            android:id="@+id/nameEdt"
            style="@style/txt_black_14"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:lines="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/areaLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="行政区"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_toLeftOf="@+id/arrowRight"
            android:id="@+id/areaTxt"
            android:text="点击选择"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            style="@style/txt_black_14" />
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/arrowRight"
            android:paddingRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/disasterTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="灾难点类型"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_toLeftOf="@+id/arrowRight2"
            android:id="@+id/disasterTypeTxt"
            android:text="点击选择"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            style="@style/txt_black_14" />
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/arrowRight2"
            android:paddingRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/disasterSizeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="灾难规模"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_toLeftOf="@+id/arrowRight3"
            android:id="@+id/disasterSizeTxt"
            android:text="点击选择"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            style="@style/txt_black_14" />
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/arrowRight3"
            android:paddingRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/avoidLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="避险级别"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_toLeftOf="@+id/arrowRight4"
            android:id="@+id/avoidTxt"
            android:text="点击选择"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            style="@style/txt_black_14" />
        <ImageView
            android:src="@mipmap/icon_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/arrowRight4"
            android:paddingRight="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
    </RelativeLayout>

    <Button
        android:id="@+id/confirmBtn"
        android:layout_margin="25dp"
        android:text="查 找"
        style="@style/txt_white_14"
        android:background="@mipmap/of_blue_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
