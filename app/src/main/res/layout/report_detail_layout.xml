<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="gone"
            android:id="@+id/titleTxt"
            android:layout_marginTop="5dp"
            android:text="题目"
            style="@style/txt_black_14" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/timeDate"
            android:text="2016-07-23 22:28"
            style="@style/txt_gray_12" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="工作描述："
            style="@style/txt_gray_14" />
        <TextView
            android:id="@+id/descTxt"
            android:layout_marginTop="5dp"
            android:text="详情"
            style="@style/txt_black_13" />
        <com.sichuan.geologenvi.views.Photo9Layout
            android:id="@+id/photoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="vertical" />
    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:id="@+id/videoLayout"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <View
            android:background="@mipmap/icon_video"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:text="视频路径"
            android:id="@+id/videoFileTxt"
            style="@style/txt_gray_12" />
    </LinearLayout>
</LinearLayout>
</ScrollView>