<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="center">

    <LinearLayout android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/shape_nocorner_black">
        <TextView
            android:text="名称"
            android:id="@+id/titleTxt"
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/txt_black_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_gray" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/hinttop"
                android:text="地环站站长"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                style="@style/txt_gray_12"/>
            <TextView
                android:id="@+id/nameTxt"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_12"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/phoneLayout1"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon"
                android:id="@+id/phone1"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/phoneLayout12"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_transwhite_withcorner"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/phoneIcon12"
                    android:src="@mipmap/of_icon_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_toRightOf="@+id/phoneIcon12"
                    android:id="@+id/phone12"
                    android:paddingLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    style="@style/txt_black_16"/>
            </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:text="地环科电话"
            style="@style/txt_gray_12"/>
        <RelativeLayout
            android:id="@+id/phoneLayout2"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon2"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon2"
                android:id="@+id/phone2"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/phoneLayout22"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon22"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon22"
                android:id="@+id/phone22"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:text="值班室电话"
            style="@style/txt_gray_12"/>

        <RelativeLayout
            android:id="@+id/phoneLayout3"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon3"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon3"
                android:id="@+id/phone3"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/phoneLayout32"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_transwhite_withcorner"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/phoneIcon32"
                android:src="@mipmap/of_icon_phone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/phoneIcon32"
                android:id="@+id/phone32"
                android:paddingLeft="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/txt_black_16"/>
        </RelativeLayout>
        </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_marginTop="15dp"
            android:text="确定"
            style="@style/txt_white_14"
            android:background="@mipmap/of_blue_btn"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </LinearLayout>
</RelativeLayout>
