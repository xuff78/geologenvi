<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView 
        android:id="@+id/main_menu_icon"
        android:layout_width="@dimen/main_menu_row_height"
        android:layout_height="@dimen/main_menu_row_height"
        android:paddingTop="@dimen/main_menu_padding_v"
        android:paddingBottom="@dimen/main_menu_padding_v"        
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
         android:scaleType="fitCenter"
         android:src="@drawable/whiteboard"  
        />
    <TextView
        android:id="@+id/main_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_menu_row_height"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/main_menu_padding_v"
        android:paddingBottom="@dimen/main_menu_padding_v"        
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="Dummy text"
        android:textColor="@color/text_color"
        android:textSize="@dimen/font_size_large" 
        />
    <ImageView 
        android:id="@+id/main_menu_bullet"
        android:layout_width="@dimen/main_menu_bullet"
        android:layout_height="@dimen/main_menu_bullet"
        android:layout_marginLeft="@dimen/main_menu_padding_h"
         android:scaleType="fitCenter"
         android:src="@drawable/bullet"   
        />
</LinearLayout>